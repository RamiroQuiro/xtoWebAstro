---
import { cardInfoGral } from "../../types/cardInfoGral";

interface Props extends cardInfoGral {}

const { children, colors, src } = Astro.props;
---

<a
href="#"
  class={`bg-gradient-to-br rounded ${colors} w-1/3 flex-auto flex h-64 relative rounded-lg overflow-hidden cursor-pointer group after:contents-[' '] after:w-full after:absolute after:top-0 after:h-full after:bg-slate-800/50 backdrop-blur-sm after:-translate-x-[100%] hover:after:-translate-x-0 after:duration-200`}
>
  <img src={src} alt={children} class="object-cover w-full group-hover:scale-105 duration-300" />
  <h3 class="absolute text-4xl font-extrabold tracking-wide text-transparent  bg-clip-text bg-gradient-to-r z-40 from-pink-700 to-violet-500 top-5 left-5">
    {children}</h3>
</a>
