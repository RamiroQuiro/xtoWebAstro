---
import Background from '../pages/header/Background.astro';
import NavBar from '../pages/NavBar/NavBar.astro';

interface Props {
  titlePage?: string;
  pageDescription?: string;
}

const { titlePage = "Xto Web", pageDescription } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={pageDescription} />
    <title>{titlePage}</title>
  </head>
  <body>
    <NavBar />
      <slot />
      <Background/>
  </body>
</html>
